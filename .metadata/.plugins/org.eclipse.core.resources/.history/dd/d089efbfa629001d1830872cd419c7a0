package com.basic;

import java.util.Scanner;

public class SumAndAvgOfNum {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		
		int num=0;
		int sum=0;
		double avg;
		System.out.println("Enter number");
		for(int i=0;i<5;i++) {
			num=sc.nextInt();
			sum+=num;
		}
		avg=sum/5;
		System.out.println("sum of 5 num is : "+sum+"\navearge of 5 no is: "+avg);
	}
}
